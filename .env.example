# ======================================
# TELEGRAM JOB AGENT CONFIGURATION
# ======================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# ======================================
# TELEGRAM API CONFIGURATION
# ======================================
# Get these from https://my.telegram.org
# 1. Log in with your phone number
# 2. Go to "API Development Tools"
# 3. Create a new application
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Your phone number in international format (include country code)
# Example: +1234567890 (for US), +919876543210 (for India)
PHONE_NUMBER=+1234567890

# ======================================
# AI SERVICE CONFIGURATION
# ======================================
# Google Gemini API Key (FREE TIER AVAILABLE)
# Get this from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI API Key (if you want to use GPT instead of Gemini)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic Claude API Key
# ANTHROPIC_API_KEY=your_claude_api_key_here

# ======================================
# GOOGLE SHEETS CONFIGURATION
# ======================================
# Path to your Google Sheets service account credentials JSON file
# Download from Google Cloud Console after creating service account
# See setup-instructions.md for detailed steps
GOOGLE_SHEETS_CREDS=credentials.json

# ======================================
# WEB DASHBOARD CONFIGURATION
# ======================================
# Port for the web dashboard (default: 8080)
# Change if port 8080 is already in use
DASHBOARD_PORT=8080

# Dashboard host (use 0.0.0.0 to allow external access)
DASHBOARD_HOST=0.0.0.0

# ======================================
# PROCESSING SETTINGS
# ======================================
# Maximum messages to fetch per group (default: 1000)
MAX_MESSAGES_PER_GROUP=1000

# Delay between AI API requests in seconds (default: 1)
# Increase if you hit rate limits
AI_REQUEST_DELAY=1

# Delay between Telegram requests in seconds (default: 2)
# Increase if you get FloodWaitError
TELEGRAM_REQUEST_DELAY=2

# Number of days to look back for messages (default: 7)
DAYS_TO_LOOK_BACK=7

# ======================================
# LOGGING CONFIGURATION
# ======================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=job_agent.log

# ======================================
# NOTIFICATION SETTINGS (OPTIONAL)
# ======================================
# Enable email notifications for new relevant jobs
EMAIL_NOTIFICATIONS=false

# SMTP Configuration (for Gmail, use smtp.gmail.com:587)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Email credentials (use app-specific password for Gmail)
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Recipients (comma-separated for multiple)
EMAIL_TO=recipient1@example.com,recipient2@example.com

# ======================================
# WEBHOOK NOTIFICATIONS (OPTIONAL)
# ======================================
# Discord webhook for instant notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url

# ======================================
# ADVANCED SETTINGS
# ======================================
# Custom keywords for job filtering (comma-separated)
# These will be added to the default fresher keywords
CUSTOM_INCLUDE_KEYWORDS=graduate,trainee,entry level

# Custom exclude keywords (comma-separated)
# These will be added to the default experience keywords
CUSTOM_EXCLUDE_KEYWORDS=architect,consultant,manager

# Enable debug mode for detailed logging
DEBUG_MODE=false

# Database backup frequency in hours (default: 24)
BACKUP_FREQUENCY_HOURS=24

# ======================================
# PERFORMANCE TUNING
# ======================================
# Batch size for Google Sheets updates (default: 100)
SHEETS_BATCH_SIZE=100

# Maximum concurrent Telegram requests (default: 3)
MAX_CONCURRENT_REQUESTS=3

# Timeout for API requests in seconds (default: 30)
API_TIMEOUT=30

# ======================================
# SECURITY SETTINGS
# ======================================
# Enable rate limiting for web dashboard (default: true)
ENABLE_RATE_LIMITING=true

# Maximum requests per minute for dashboard API (default: 60)
DASHBOARD_RATE_LIMIT=60

# Secret key for dashboard sessions (generate a random string)
DASHBOARD_SECRET_KEY=your_random_secret_key_here

# ======================================
# EXAMPLE VALUES FOR REFERENCE
# ======================================
# TELEGRAM_API_ID=1234567
# TELEGRAM_API_HASH=abcdef123456789abcdef123456789ab
# PHONE_NUMBER=+919876543210
# GEMINI_API_KEY=AIzaSyABC123def456GHI789jkl012MNO345pqr678
# GOOGLE_SHEETS_CREDS=path/to/your/credentials.json